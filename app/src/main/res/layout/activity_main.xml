<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tempo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bonneannee.accelero.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/textTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="invisible"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="314dp" />

        <TextView
            android:id="@+id/compteurText"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:text="TextView" />

        <TextView
            android:id="@+id/maxZ"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TextView" />

        <TextView
            android:id="@+id/conditionMax"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:text="TextView" />
    </LinearLayout>


    <Button
        android:id="@+id/initialiserMax"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="reinitialiserMax"
        android:textColor="#FFFFFF"
        android:text="Initialiser Max" />

    <TextView
        android:id="@+id/outputText"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textReponse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/chewy"
        android:textAlignment="center" />

    <Button
        android:id="@+id/stopMorse"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:onClick="stopPhrase"
        android:text="STOP"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Renseigner ici votre tempo en seconde"
        android:inputType="phone" />

    <Button
        android:id="@+id/changerTempo"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:onClick="changeTempo"
        android:text="Oh oui cliquer sur moi"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/flash"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <Button
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aide"
        android:onClick="infoAct"
        android:textColor="#FFFFFF"/>

</LinearLayout>
